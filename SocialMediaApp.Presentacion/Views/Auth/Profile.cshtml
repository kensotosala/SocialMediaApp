            </div>


                <div class="password-section">
                    <h2 class="profile-title">Cambiar contraseña</h2>
                    <div class="form-group">
                        <label class="form-label" for="current-password">Contraseña actual</label>
                        <input type="password" id="current-password" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="new-password">Nueva contraseña</label>
                        <input type="password" id="new-password" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="confirm-password">Confirmar nueva contraseña</label>
                        <input type="password" id="confirm-password" class="form-control">
                    </div>
                </div>

                <button type="submit" class="btn-save">Guardar cambios</button>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const uploadBtn = document.getElementById('upload-btn');
            const profileImage = document.getElementById('profile-image');
            const interestInput = document.getElementById('interest-input');
            const maxWarning = document.getElementById('max-interests-warning');
            const duplicateWarning = document.getElementById('duplicate-warning');
            const suggestionsContainer = document.getElementById('interest-suggestions');

            uploadBtn.addEventListener('click', function () {
                // Crear un input de archivo temporal
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.accept = 'image/*';

                fileInput.onchange = function (e) {
                    const file = e.target.files[0];
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function (event) {
                            profileImage.src = event.target.result;
                            // Ocultar el botón después de seleccionar la imagen
                            uploadBtn.classList.add('hidden');
                        };
                        reader.readAsDataURL(file);
                    }
                };

                fileInput.click();
            });

            // Prevenir el arrastre de imágenes por defecto
            const preventDefaults = e => {
                e.preventDefault();
                e.stopPropagation();
            };

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                document.getElementById('profile-image-wrapper').addEventListener(eventName, preventDefaults, false);
            });


            // Manejo de intereses
            const interesesInput = document.getElementById('intereses');
            const interestsContainer = document.querySelector('.interests-container');

            interesesInput.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    if (this.value.trim()) {
                        addInterest(this.value.trim());
                        this.value = '';
                    }
                }
            });

            // Función para agregar intereses
            function addInterest(text) {
                const interestTag = document.createElement('div');
                interestTag.className = 'interest-tag';
                interestTag.innerHTML = `
                    ${text}
                    <span class="remove-interest">×</span>
                `;
                interestsContainer.appendChild(interestTag);

                // Agregar evento para eliminar interés
                interestTag.querySelector('.remove-interest').addEventListener('click', function () {
                    interestTag.remove();
                });
            }

            // Evento para eliminar intereses existentes
            document.querySelectorAll('.remove-interest').forEach(button => {
                button.addEventListener('click', function () {
                    this.parentElement.remove();
                });
            });

            // Prevenir envío del formulario por defecto
            document.querySelector('form').addEventListener('submit', function (e) {
                e.preventDefault();
                alert('Cambios guardados exitosamente');
            });
            // Sugerencias predefinidas
            const suggestions = [
                "Programación", "Desarrollo web", "JavaScript", "Python", "React",
                "Node.js", "Base de datos", "UI/UX", "Diseño gráfico", "Marketing digital",
                "SEO", "Redes sociales", "Análisis de datos", "Machine Learning",
                "Inteligencia Artificial", "Cloud Computing", "DevOps", "Ciberseguridad",
                "Blockchain", "IoT"
            ];

            const MAX_INTERESTS = 10;
            let currentInterests = [];

            function addInterest(interest) {
                // Validaciones
                if (currentInterests.length >= MAX_INTERESTS) {
                    maxWarning.style.display = 'block';
                    setTimeout(() => maxWarning.style.display = 'none', 3000);
                    return;
                }

                if (currentInterests.includes(interest.toLowerCase())) {
                    duplicateWarning.style.display = 'block';
                    setTimeout(() => duplicateWarning.style.display = 'none', 3000);
                    return;
                }

                // Crear y añadir el tag
                const interestTag = document.createElement('div');
                interestTag.className = 'interest-tag';
                interestTag.innerHTML = `
                    ${interest}
                    <span class="remove-interest" title="Eliminar interés">×</span>
                `;

                interestsContainer.appendChild(interestTag);
                currentInterests.push(interest.toLowerCase());

                // Evento para eliminar
                interestTag.querySelector('.remove-interest').addEventListener('click', function() {
                    interestTag.remove();
                    currentInterests = currentInterests.filter(i => i !== interest.toLowerCase());
                    maxWarning.style.display = 'none';
                });
            }

            // Manejar entrada de intereses
            interestInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const interest = this.value.trim();
                    if (interest) {
                        addInterest(interest);
                        this.value = '';
                        suggestionsContainer.style.display = 'none';
                    }
                }
            });

            // Sistema de sugerencias
            interestInput.addEventListener('input', function() {
                const value = this.value.toLowerCase();
                if (value.length < 2) {
                    suggestionsContainer.style.display = 'none';
                    return;
                }

                const matchingSuggestions = suggestions.filter(s =>
                    s.toLowerCase().includes(value) &&
                    !currentInterests.includes(s.toLowerCase())
                );

                if (matchingSuggestions.length > 0) {
                    suggestionsContainer.innerHTML = matchingSuggestions
                        .map(s => `<div class="suggestion-item">${s}</div>`)
                        .join('');
                    suggestionsContainer.style.display = 'block';

                    // Eventos para las sugerencias
                    suggestionsContainer.querySelectorAll('.suggestion-item').forEach(item => {
                        item.addEventListener('click', function() {
                            addInterest(this.textContent);
                            interestInput.value = '';
                            suggestionsContainer.style.display = 'none';
                        });
                    });
                } else {
                    suggestionsContainer.style.display = 'none';
                }
            });

            // Cerrar sugerencias al hacer clic fuera
            document.addEventListener('click', function(e) {
                if (!interestInput.contains(e.target) && !suggestionsContainer.contains(e.target)) {
                    suggestionsContainer.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>