@model SocialMediaApp.Dominio.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

@if (TempData["Mensaje"] != null)
{
    <div class="alert @TempData["TipoMensaje"]" role="alert">
        @TempData["Mensaje"]
    </div>
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestionar Perfil</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body>
        <div class="container">
            <div class="profile-header">
                <h1 class="profile-title">Gestionar Perfil</h1>
                <div class="profile-image-container">
                    <img src="/api/placeholder/150/150" alt="Foto de perfil" class="profile-image" id="profile-image">
                    <button class="upload-btn" id="upload-btn">
                        <i class="fas fa-camera"></i> Agregar foto
                    </button>
                </div>
            </div>

                <div class="form-group">
                    <label class="form-label" for="nombre">Nombre completo</label>
                    <input type="text" id="nombre" class="form-control" placeholder="Tu nombre completo">
                </div>

                <div class="form-group">
                    <label class="form-label" for="biografia">Biografía</label>
                    <textarea id="biografia" class="form-control" placeholder="Cuéntanos sobre ti..."></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label" for="ubicacion">Ubicación</label>
                    <input type="text" id="ubicacion" class="form-control" placeholder="Tu ubicación">
                </div>

                <div class="form-group">
                    <label class="form-label" for="email">Correo electrónico</label>
                    <input type="email" id="email" class="form-control" placeholder="tu@gmail.com">
                </div>

                <!-- Intereses-->
                <div class="form-group">
                    <label class="form-label">Intereses</label>
                    <div class="interest-input-container">
                        <input type="text"
                               class="interest-input"
                               id="interest-input"
                               placeholder="Escribe un interés y presiona Enter">
                        <div class="interest-suggestions" id="interest-suggestions"></div>
                    </div>
                    <small class="max-interests-warning" id="max-interests-warning">
                        Has alcanzado el máximo de 10 intereses permitidos.
                    </small>
                    <small class="duplicate-interest-warning" id="duplicate-warning">
                        Este interés ya está en tu lista.
                    </small>
                    <div class="interests-container" id="interests-container"></div>
                </div>

                @if (User.Claims.FirstOrDefault(c => c.Type == "ExternalLogin")?.Value == "1")
                {
                    <fieldset disabled>
                        <form asp-action="" method="post">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-row">
                                <h2 class="profile-title">Cambiar contraseña</h2>
                                <h4 class="text-danger"> Debes gestionar tu contraseña en tu cuenta de Google.</h4>

                                <div class="form-group">
                                    <label asp-for="password">Contraseña:</label>
                                    <input type="password" asp-for="password" class="form-control" placeholder="Contraseña actual">
                                    <span asp-validation-for="password" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="newPassword">Nueva contraseña:</label>
                                    <input type="password" asp-for="newPassword" class="form-control" placeholder="Nueva contraseña">
                                    <span asp-validation-for="newPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="confirmPassword">Confirmar Contraseña:</label>
                                    <input type="password" asp-for="confirmPassword" class="form-control" placeholder="Confirmar nueva contraseña">
                                    <span asp-validation-for="confirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary" disabled>Guardar cambios</button>
                        </form>
                    </fieldset>
                }
                else
                {
                <form asp-controller="Auth" asp-action="ChangePassword" method="post">

                        <div class="form-header">
                            <h2 class="profile-title">Cambiar contraseña</h2>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-row">

                            <div class="form-group">
                                <label asp-for="password">Contraseña:</label>
                                <input type="password" asp-for="password" class="form-control" placeholder="Contraseña">
                                <span asp-validation-for="password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="newPassword">Nueva contraseña:</label>
                                <input type="password" asp-for="newPassword" class="form-control" placeholder="Nueva contraseña">
                                <span asp-validation-for="newPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="confirmPassword">Confirmar Contraseña:</label>
                                <input type="password" asp-for="confirmPassword" class="form-control" placeholder="Confirmar contraseña">
                                <span asp-validation-for="confirmPassword" class="text-danger"></span>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-primary">Crear Cuenta</button>

                    </form>
                }
        </div>
    </body>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }


