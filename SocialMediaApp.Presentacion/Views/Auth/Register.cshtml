@model SocialMediaApp.Dominio.ViewModels.UserRegisterViewModel

@{
    ViewData["Title"] = "Registrar cuenta";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Register</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            background: linear-gradient(45deg, #833ab4, #fd1d1d, #fcb045);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            display: flex;
            justify-content: space-between;
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

        .welcome-side {
            flex: 1;
            padding: 40px;
            background: linear-gradient(135deg, #833ab4, #fd1d1d);
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            .welcome-side h1 {
                font-size: 2.5em;
                margin-bottom: 20px;
                position: relative;
                z-index: 1;
            }

            .welcome-side p {
                font-size: 1.2em;
                margin-bottom: 30px;
                line-height: 1.6;
                position: relative;
                z-index: 1;
            }

        .register-side {
            flex: 1;
            padding: 40px;
            background: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .register-form {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .form-header h2 {
                font-size: 2em;
                color: #333;
                margin-bottom: 10px;
            }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-row {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 15px;
            border: 2px solid #e1e1e1;
            border-radius: 12px;
            font-size: 1em;
            transition: all 0.3s ease;
            background: #f8f9fa;
        }

            .form-group input:focus,
            .form-group select:focus {
                border-color: #833ab4;
                outline: none;
                box-shadow: 0 0 0 3px rgba(131, 58, 180, 0.1);
            }

        .register-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, #833ab4, #fd1d1d);
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 1.1em;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 20px;
        }

            .register-btn:hover {
                transform: translateY(-2px);
            }

        .social-register {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 12px;
            border-radius: 12px;
            border: 2px solid #e1e1e1;
            background: white;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 500;
            gap: 10px;
        }

            .social-btn:hover {
                background: #f8f9fa;
                transform: translateY(-2px);
            }

        .google-btn {
            color: #757575;
        }

        .terms {
            text-align: center;
            font-size: 0.9em;
            color: #666;
            margin-top: 20px;
        }

            .terms a {
                color: #833ab4;
                text-decoration: none;
            }

                .terms a:hover {
                    text-decoration: underline;
                }

        .circles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            .circles div {
                position: absolute;
                border-radius: 50%;
                background: rgba(255, 255, 255, 0.1);
            }

                .circles div:nth-child(1) {
                    width: 200px;
                    height: 200px;
                    top: -50px;
                    right: -50px;
                }

                .circles div:nth-child(2) {
                    width: 150px;
                    height: 150px;
                    bottom: 50px;
                    left: -50px;
                }

        .avatar-upload {
            text-align: center;
            margin-bottom: 20px;
        }

        .avatar-preview {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin: 0 auto 10px;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border: 2px solid #e1e1e1;
        }

            .avatar-preview img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        @media (max-width: 768px) {
            .container

        {
            flex-direction: column;
        }

        .welcome-side {
            padding: 30px;
            text-align: center;
        }

        .register-side {
            padding: 30px;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }


        /* Estilos para seleccionar Pais */
        }

        .country-select {
            position: relative;
        }

        .country-option {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .country-flag {
            width: 24px;
            height: 16px;
            object-fit: cover;
        }

        .selected-country {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px;
            border: 2px solid #e1e1e1;
            border-radius: 12px;
            background: #f8f9fa;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .selected-country:hover {
                border-color: #833ab4;
            }

        .countries-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 2px solid #e1e1e1;
            border-radius: 12px;
            margin-top: 5px;
            max-height: 200px;
            overflow-y: auto;
            z-index: 1000;
            display: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .countries-dropdown.show {
                display: block;
            }

        .country-search {
            padding: 10px;
            position: sticky;
            top: 0;
            background: white;
            border-bottom: 1px solid #e1e1e1;
        }

            .country-search input {
                width: 100%;
                padding: 8px;
                border: 1px solid #e1e1e1;
                border-radius: 6px;
            }

        .country-item {
            padding: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: background-color 0.2s;
        }

            .country-item:hover {
                background-color: #f8f9fa;
            }

        .loading-countries {
            text-align: center;
            padding: 20px;
            color: #666;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="welcome-side">
            <div class="circles">
                <div></div>
                <div></div>
            </div>
            <h1>¡Únete a nuestra comunidad!</h1>
            <p>
                Crea una cuenta para conectar con amigos, compartir tus momentos especiales y descubrir contenido
                increíble.
            </p>
        </div>

        <div class="register-side">
            <form class="register-form">
                <div class="form-header">
                    <h2>Crear Cuenta</h2>
                    <p>¡Completa tus datos para comenzar!</p>
                </div>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Nombre">Nombre:</label>
                            <input type="text" placeholder="Nombre" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Apellidoo">Apellido:</label>
                            <input type="text" placeholder="Apellido" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="NombreUsuario">Nombre de Usuario:</label>
                        <input asp-for="NombreUsuario" class="form-control" />
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">Correo electrónico:</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Contraseña">Contraseña:</label>
                        <input type="password" asp-for="Contraseña" class="form-control" required />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="password" placeholder="Confirmar contraseña" required>
                    </div>

                    <div class="form-group country-select">
                        <div class="selected-country" id="selectedCountry">
                            <span>Selecciona tu país</span>
                        </div>
                        <div class="countries-dropdown" id="countriesDropdown">
                            <div class="country-search">
                                <input type="text" placeholder="Buscar país..." id="countrySearch">
                            </div>
                            <div id="countriesList">
                                <div class="loading-countries">Cargando países...</div>
                            </div>
                        </div>
                    </div>
                </form>
                <button type="submit" class="register-btn">Crear Cuenta</button>


                <div class="terms">
                    Al registrarte, aceptas nuestros
                    <a href="#">Términos y Condiciones</a> y
                    <a href="#">Política de Privacidad</a>
                </div>
            </form>
        </div>

    </div>
    <script>
        // Función para cargar los países
        async function loadCountries() {
            try {
                const response = await fetch('https://restcountries.com/v3.1/all');
                const countries = await response.json();

                // Ordenar países por nombre en español
                return countries
                    .map(country => ({
                        name: country.translations.spa?.common || country.name.common,
                        code: country.cca2,
                        flag: country.flags.svg
                    }))
                    .sort((a, b) => a.name.localeCompare(b.name));
            } catch (error) {
                console.error('Error cargando países:', error);
                return [];
            }
        }

        // Función para renderizar la lista de países
        function renderCountries(countries, searchTerm = '') {
            const countriesList = document.getElementById('countriesList');
            const filteredCountries = countries.filter(country =>
                country.name.toLowerCase().includes(searchTerm.toLowerCase())
            );

            countriesList.innerHTML = filteredCountries
                .map(country => `
                    <div class="country-item" data-code="${country.code}">
                        <img src="${country.flag}" alt="${country.name}" class="country-flag">
                        <span>${country.name}</span>
                    </div>
                `).join('');
        }

        // Inicialización y eventos
        document.addEventListener('DOMContentLoaded', async () => {
            const selectedCountry = document.getElementById('selectedCountry');
            const countriesDropdown = document.getElementById('countriesDropdown');
            const countrySearch = document.getElementById('countrySearch');
            const countries = await loadCountries();

            // Mostrar/ocultar dropdown
            selectedCountry.addEventListener('click', () => {
                countriesDropdown.classList.toggle('show');
            });

            // Cerrar dropdown al hacer clic fuera
            document.addEventListener('click', (e) => {
                if (!selectedCountry.contains(e.target) &&
                    !countriesDropdown.contains(e.target)) {
                    countriesDropdown.classList.remove('show');
                }
            });

            // Búsqueda de países
            countrySearch.addEventListener('input', (e) => {
                renderCountries(countries, e.target.value);
            });

            // Selección de país
            document.getElementById('countriesList').addEventListener('click', (e) => {
                const countryItem = e.target.closest('.country-item');
                if (countryItem) {
                    const code = countryItem.dataset.code;
                    const country = countries.find(c => c.code === code);
                    selectedCountry.innerHTML = `
                        <img src="${country.flag}" alt="${country.name}" class="country-flag">
                        <span>${country.name}</span>
                    `;
                    countriesDropdown.classList.remove('show');
                }
            });

            // Renderizar países inicialmente
            renderCountries(countries);
        });
    </script>
</body>

</html>

@if (TempData["Mensaje"] != null)
{
    <div class="alert @TempData["TipoMensaje"]" role="alert">
        @TempData["Mensaje"]
    </div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

